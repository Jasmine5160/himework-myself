#include <stdio.h>

int main(void) {
    int b = 2;

    printf("變數 b 的值：%d\n", b);//%d =一個整數  \n =換行
    printf("變數 b 的值：%d\n", *&b); //%p為印出地址的16進位表示法

    return 0;
}

